{
    "name": "devexroadshow/project-starter",
    "description": "Project template for Drupal 8 sites built with BLT and Lightning.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^8.3",
        "acquia/lightning": "2.1.0",
        "drupal/acsf": "^1.32.0",
        "drush/drush": "8.1.10",
        "drupal/seckit": "^1.0",
        "drupal/config_split": "^1.0",
        "drupal/paragraphs": "^1.1"
    },
    "require-dev": {
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "mikey179/vfsStream": "~1.2",
        "symfony/css-selector": "~2.8",
        "drupal/devel": "^1.0",
        "jakoch/phantomjs-installer": "^2.1.1-p07",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "geerlingguy/drupal-vm": "~4.3"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "blt": {
            "update": true
        },
        "enable-patching": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "require": [
                "vendor/acquia/blt/composer.required.json"
            ],
            "include": [
                "blt/composer.overrides.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": true
        }
    },
    "scripts": {
        "install-phantomjs": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    }
}
